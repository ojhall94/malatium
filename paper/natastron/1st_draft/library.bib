}

@article{aerts+2017,
  title = {Kepler Sheds New and Unprecedented Light on the Variability of a Blue Supergiant: Gravity Waves in the {{O9}}.{{5Iab}} Star {{HD}} 188209},
  shorttitle = {Kepler Sheds New and Unprecedented Light on the Variability of a Blue Supergiant},
