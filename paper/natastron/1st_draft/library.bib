@article{chen+2017,
  title = {Absolute {{Magnitudes}} of {{Seismic Red Clumps}} in the {{Kepler Field}} and {{SAGA}}: {{The Age Dependency}} of the {{Distance Scale}}},
  shorttitle = {Absolute {{Magnitudes}} of {{Seismic Red Clumps}} in the {{Kepler Field}} and {{SAGA}}},
