  year = {2017},
  month = may,
  volume = {840},
  pages = {77},
  doi = {10.3847/1538-4357/aa6d0f},
  abstract = {Red clump stars are fundamental distance indicators in astrophysics, although theoretical stellar models predict a dependence of absolute magnitudes with age. This effect is particularly strong below{\~ }2 Gyr, but even above this limit a mild age dependence is still expected. We use seismically identified red clump stars in the Kepler field for which we have reliable distances, masses, and ages from the SAGA survey, to first explore this effect. By excluding red clump stars with masses larger than 1.6 \{M\}\textsubscript{{$\Sun$} } (corresponding to ages younger than 2 Gyr), we derive robust calibrations linking intrinsic colors to absolute magnitudes in the following photometric systems: Str\"omgren by, Johnson BV, Sloan griz, 2MASS JHK \textsubscript{ s }, and WISE W1W2W3. With the precision achieved we also detect a slope of absolute magnitudes{\~ } 0.020+/- 0.003 \{mag\} \{\{Gyr\}\}\textsuperscript{-1} in the infrared, implying that distance calibrations of clump stars can be off by up to{\~ } 0.2 \{mag\} in the infrared (over the range from 2 to 12 Gyr) if their ages are unknown. Even larger uncertainties affect optical bands, because of the stronger interdependency of absolute magnitudes on colors and age. Our distance calibrations are ultimately based on asteroseismology, and we show how the distance scale can be used to test the accuracy of seismic scaling relations. Within the uncertainties our calibrations are in agreement with those built upon local red clumps with Hipparcos parallaxes, although we find a tension, which, if confirmed, would imply that scaling relations overestimate the radii of red clump stars by 2 {$\pm$} 2\%. Data releases post Gaia DR1 will provide an important testbed for our results.},
  file = {/Users/Oliver/Zotero/storage/WR6JQFKB/Chen et al. - 2017 - Absolute Magnitudes of Seismic Red Clumps in the K.pdf;/Users/Oliver/Zotero/storage/7BPBXRZ5/ui.adsabs.harvard.edu.html},
  journal = {The Astrophysical Journal},
  language = {en},
  number = {2}
}

@article{chiavassa+2017,
