  journal = {The Astrophysical Journal},
  keywords = {Seismic rotation},
  language = {en},
  number = {2}
}

@article{chaplin+2014,
  title = {Super-{{Nyquist}} Asteroseismology of Solar-like Oscillators with {{Kepler}} and {{K2}} - Expanding the Asteroseismic Cohort at the Base of the Red-Giant Branch},
  author = {Chaplin, W. J. and Elsworth, Y. and Davies, G. R. and Campante, T. L. and Handberg, R. and Miglio, A. and Basu, S.},
