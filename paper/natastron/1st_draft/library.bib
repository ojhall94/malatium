  author = {Deheuvels, S. and Garc{\'i}a, R. A. and Chaplin, W. J. and Basu, S. and Antia, H. M. and Appourchaux, T. and Benomar, O. and Davies, G. R. and Elsworth, Y. and Gizon, L. and Goupil, M. J. and Reese, D. R. and Regulo, C. and Schou, J. and Stahn, T. and Casagrande, L. and {Christensen-Dalsgaard}, J. and Fischer, D. and Hekker, S. and Kjeldsen, H. and Mathur, S. and Mosser, B. and Pinsonneault, M. and Valenti, J. and Christiansen, J. L. and Kinemuchi, K. and Mullally, F.},
